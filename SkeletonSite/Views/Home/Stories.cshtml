@model SkeletonSite.Models.Story
@{
    Layout = null;
}

<!DOCTYPE html>
<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.4.0/css/bootstrap.min.css">
    <title>Stories Page</title>
</head>
<body>
    <nav class="navbar navbar-inverse">
        <div class="container-fluid">
            <ul class="nav navbar-nav">
                <li><a asp-action="Index">Home</a></li>
                <li><a asp-action="History">History</a></li>
                <li class="active"><a asp-action="Stories">Stories</a></li>
                <li><a asp-action="Sources">Sources</a></li>
                <li><a asp-action="Books">Books</a></li>
                <li><a asp-action="Links">Links</a></li>
            </ul>
        </div>
    </nav>
    <h2 class="text-center">This is where you can input stories of your choosing</h2>
    <div class="panel panel-success">
        <div class="panel-heading text-left"><h4>Enter your stories below</h4></div>
        <div class="panel-body">
            <form class="p-4" asp-action="Stories" method="post">
                <div asp-validation-summary="All"></div>
                <div class="form-group">
                    <label asp-for="Title">Title:</label>
                    <input class="form-control" asp-for="Title" />
                </div>
                <div class="form-group">
                    <label asp-for="Text">Text:</label>
                    <input class="form-control" asp-for="Text" />
                </div>
                <div class="text-md-left">
                    <button class="btn btn-primary" type="submit">Submit Story</button>
                </div>
            </form>
        </div>
            <div class="text-center">
                If you want to see others stories, click <a class="nav-link" asp-action="StoryBoard">here</a>
                to go to that page.
            </div>

        </div>
</body>
</html>